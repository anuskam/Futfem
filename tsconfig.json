{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",                                  

    /* Modules */
    "module": "commonjs",                             
    "rootDir": "./src",                               

    /* Emit */
    "outDir": "./",                                   

    /* Interop Constraints */
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "resolveJsonModule": true,
    /* Type Checking */
    "strict": true,                                   

    /* Completeness */
    "skipLibCheck": true                              
  }
}
